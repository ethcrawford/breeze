@import 'variables/_colors.styl'
@import 'variables/_sizes.styl'
@import 'variables/_parameters.styl'
@import 'variables/_sprite.styl'
@import 'variables/_initiator.styl'

@import 'mixins/_rem.styl'
@import 'mixins/_media.styl'
@import 'mixins/_sprite.styl'
@import 'mixins/_composer.styl'

+composer(initiator__special)

  +composer(special__page-header)
    .page-header
      position: fixed
      top: 0
      left: 0
      z-index: page-header_z-index
      padding: rem(44px) 0
      width: 100%
      background-color: transparent
      transition: all .37s cubic-bezier(0, 0, .58, 1)


  +composer(special__navbar)
    .navbar

      &__logo
        margin-right: rem(40px)
        color: white_color
        text-transform: uppercase
        letter-spacing: tracking(50)

      &__toggle
        margin-left: auto
        color: white_color
        text-transform: uppercase
        font-size: rem(14px)
        font-weight: 700
        border-color: white_color
        letter-spacing: tracking(50)


  +composer(special__app-logo)
    .app-logo
      font-weight: 700
      font-size: rem(24px)


  +composer(special__navbar-list)
    .navbar-list
      margin-left: auto

      &__item
        margin-right: rem(30px)

        &--last
          margin-right: 0

      &__link
        color: navbar__link-color
        text-transform: uppercase
        font-weight: 700
        font-size: rem(14px)
        letter-spacing: tracking(50)

        &--current
          color: white_color

        &:hover,
        &:focus
          color: white_color


  +composer(special__slide-out-menu)
    .slide-out-menu
      position: fixed
      top: 0
      left: rem(-300px)
      z-index: slide-out-menu_z-index
      overflow-y: auto
      padding: rem(40px)
      width: rem(300px)
      height: 100%
      background-color: slide-out-menu_bg-color
      transition: all .7s cubic-bezier(.545, 0, .05, 1)

      +wider(media-lg)
        left: rem(-380px)
        width: rem(380px)


    .slide-out-menu-overlay
      display: none
      position: fixed
      top: 0
      left: 0
      z-index: slide-out-menu-overlay_z-index
      width: 100%
      height: 100%


  +composer(special__menu)
    .menu

      &__header
        margin-bottom: rem(40px)

      &__heading
        color: white_color

      &__toggle
        margin-left: auto

      &__button
        border-color: white_color
        color: white_color

        &:hover,
        &:active
          border-color: white_color
          background-color: white_color
          color: base_color


  +composer(special__menu-list)
    .menu-list
      margin-bottom: rem(20px)

      &__item
        margin-bottom: rem(16px)

        &--last
          margin-bottom: 0

      &__link
        color: white_color

        &:hover
          text-decoration: line-through


  +composer(special__sprite-icon-special)
    .sprite-icon

      &--arrow-left
        sprite-position(sprite-arrow-left)
        sprite-width(sprite-arrow-left)
        sprite-height(sprite-arrow-left)

      &--arrow-right
        sprite-position(sprite-arrow-right)
        sprite-width(sprite-arrow-right)
        sprite-height(sprite-arrow-right)

      &--butterfly
        sprite-position(sprite-butterfly)
        sprite-width(sprite-butterfly)
        sprite-height(sprite-butterfly)

      &--cat
        sprite-position(sprite-cat)
        sprite-width(sprite-cat)
        sprite-height(sprite-cat)

      &--cloud
        sprite-position(sprite-cloud)
        sprite-width(sprite-cloud)
        sprite-height(sprite-cloud)

      &--cloud3
        sprite-position(sprite-cloud3)
        sprite-width(sprite-cloud3)
        sprite-height(sprite-cloud3)

      &--marker
        sprite-position(sprite-marker)
        sprite-width(sprite-marker)
        sprite-height(sprite-marker)

  .home
    padding-top: rem(362px)
    padding-bottom: rem(362px)

    &__heading
      margin-bottom: rem(26px)
      font-weight: 700
      color: white_color
      text-transform: uppercase
      font-size: rem(48px)

    &__subtitle
      margin-bottom: rem(32px)
      font-size: rem(22px)
      color: white_color

    &__text
      line-height: 1.625
      color: white_color
      margin-bottom: rem(40px)

    &__button-container
      justify-content: center

    &__button
      font-weight: 700
      color: white_color
      text-transform: uppercase
      border rem(2px) white_color solid
      border-radius: 50px

      &--learn
        padding: rem(16px) rem(66px)
        margin-right: rem(20px)

        &:hover,
        &:focus
          background-color: white_color
          color: base_color

      &--download
        padding: rem(16px) rem(53px)
        border-color: base_accent
        background-color: base_accent

        &:hover,
        &:focus
          background-color: base_accent-hover
          border-color: base_accent-hover

    &__bg,
    &__bg-overlay
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%

    &__bg
      background-image: url('images/home-bg.png')
      background-position: center top
      background-repeat: repeat
      background-size: cover
      z-index: -20

    &__bg-overlay
      background-color: rgb(0, 0, 0)
      opacity: 0.502
      z-index: -10
