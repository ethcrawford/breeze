extends _base.pug

block description
  meta(
    name='description'
    content='Breeze - пример верстки простой посадочной страницы. Карусель (слайд-шоу), видео на странице и примитивная таблица цен'
  )

block keywords
  meta(
    name='keywords'
    content='верстка, landing-page, front-end, static-site'
  )

block author
  meta(
    name='author'
    content='Ethcrawford'
  )

block title
  title
    | Breeze

block main
  h1.heading-clear.visually-hidden
    | Breeze

  header.page-header
    .container

      .line.navbar
        a.link-clear.app-logo.navbar__logo(
          href='index.html'
        )
          | Breeze

        ul.list-clear.line.navbar-list.navbar__list.navbar__list--responsive
          li.navbar-list__item
            a.link-clear.navbar-list__link.navbar-list__link--current.smooth-scroll(
              href='#home'
            )
              | Home

          li.navbar-list__item
            a.link-clear.navbar-list__link.smooth-scroll(
              href='#features'
            )
              | Features

          li.navbar-list__item
            a.link-clear.navbar-list__link.smooth-scroll(
              href='#rates'
            )
              | Rates

          li.navbar-list__item.navbar-list__item--last
            a.link-clear.navbar-list__link.smooth-scroll(
              href='#contacts'
            )
              | Contacts

        button.button-clear.example-button.navbar__toggle.navbar__toggle--responsive.slide-out-menu-toggle(
          type='button'
        )
          | Menu

  .slide-out-menu-container
    nav.menu.slide-out-menu
      header.line.menu__header
        h2.heading-clear.menu__heading
          | Navigation

        button.button-clear.example-button.menu__button.menu__toggle.slide-out-menu__toggle
          | Close

      ul.list-clear.menu-list
        li.menu-list__item
          a.link-clear.menu-list__link.smooth-scroll(
            href='#home'
          )
            | Home

        li.menu-list__item
          a.link-clear.menu-list__link.smooth-scroll(
            href='#about-us'
          )
            | About Us

        li.menu-list__item
          a.link-clear.menu-list__link.smooth-scroll(
            href='#portfolio'
          )
            | Portfolio

        li.menu-list__item
          a.link-clear.menu-list__link.smooth-scroll(
            href='#services'
          )
            | Services

        li.menu-list__item.menu-list__item--last
          a.link-clear.menu-list__link.smooth-scroll(
            href='#contact'
          )
            | Contact

    .slide-out-menu-overlay

  main.main
    section#home.section-base.home.text-align-center
      .container

        .row
          .col-lg-8.offset-lg-2
            h2.heading-clear.home__heading
              | Free Website for Your App

            p.text-clear.home__subtitle
              | Download two PSD mockups both for desktop and mobile layouts

            p.text-clear.home__text
              | This Modern and clean PSD Template is made to help you showcase your app. PSD files are well organized and based on Bootstrap 1170px grid so its very easy to customize and update.

            .line.home__button-container
              a.link-clear.home__button.home__button--learn(
                href='#'
              )
                | Learn More

              a.link-clear.home__button.home__button--download(
                href='#'
              )
                | Download App

      .home__bg
      .home__bg-overlay

  footer.page-footer
    .container

      p.text-clear.copyright-text
        small &copy; Ethcrawford 2018
